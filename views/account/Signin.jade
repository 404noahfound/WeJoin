extends ../layout

block content
	p Welcome to WeJoin.
	p Please enter your Username and Password
	form(name="account", method="post")
		div.input
			span.label Username
			br
			input(type="text", name="username")
		div.input
			span.label Password
			br
			input(type="text", name="password")
		div.actions
			input(type="submit", value="Sign in")