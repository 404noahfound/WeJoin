doctype html

html
	head
		meta(charset="utf-8")
		title !{title}
		script(src="//ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
		link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.css')
		script(src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.js")
	body
		ul
			li
				a(href="/") Home
			li
				a(href="/activity") Activity
			ul
				li
					a Search Activity
						form(id="SearchActivity", method="get", action="/activity/search/")
							input(type="text", id="title")
							input(type="submit", value="Search")
						script.
							var a = document.getElementById("SearchActivity");
							a.addEventListener("submit",function(e) {
								e.preventDefault();
								var b = document.getElementById("title").value;
								window.location.href = "/activity/search/" + b;
							});
				li
					a(href="/activity/create") Create Activity
				li
					a(href="/activity/organizermodify") Modify Activity
				li
					a(href="/activity/getbyuser") User's Activities
				li
					a(href="/activity/delete_all") Delete All Activities
			li
				a(href = "/Notification") Notification
			ul
				li
					a(href="/notification/create") Create Notification
				li
					a(href="/notification/delete") Delete Notification
			li
				a(href = "/note") Note
			ul
				li
					a(href="/note/search") Search Note
				li
					a(href="/note/create") Create Note
				li
					a(href="/note/modify") Modify Note
				li
					a(href="/note/delete") Delete Note
			li 
				a(href="/user") User
			ul
				li
					a(href="/user/modify") Modify User
				if (username)
					li
						a(href="/user/logout") Log Out
				else 
					li
						a(href="/user/login") Log In
				li
					a(href="/user/delete_all") Delete All Users
				li
					a(href="/other") Other


		#wrapper
			block content