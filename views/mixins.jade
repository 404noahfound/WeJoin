mixin ListNotes(notes)
    script.
        $(document).ready(function() {
            $('.ui.float.segment').hover(function(){
                $(this).css("background-color","#F0F0F0");
            }, function(){
                $(this).css("background-color","white");
            });
        });
    each note in notes
        div(class='ui main text container', style="color:inherit")
            a(href="/note/view/#{note._id}")
                div(class="ui float segment")
                    div(class="ui grid")
                        div(class="four wide column")
                            img(class="ui small rounded image" src="/images/#{note.note_type}.png")
                        div(class="twelve wide column")
                            h1(class='ui header') #{note.title}
                            h5(class='ui grey header') 
                                div
                                    i(class="user icon")
                                    |#{note.authorname}
                                div
                                    i(class="calendar icon") 
                                    |#{note.modified_at}
            div(class='ui divider')

//- user{avatar: String, nickname: String}
mixin user_label(user)
  div.ui.image.label
    img(src=user.avatar.replace('static', ''))
    | &nbsp&nbsp&nbsp#{user.nickname}

mixin user_card(user)
  a(class="ui raised link card", href= "/user/" + user._id)
    div.image
     img(src=user.avatar)
    div.content
      div.header #{user.nickname}

//- followee{_id: String}
mixin follow(followee)
  div(class="ui tiny follow button", followee = followee._id, style="margin-left:20px")
    div.unfollowed
      i.plus.icon
      |follow
    div.followed
      |Followed