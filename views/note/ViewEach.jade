extends ../layout
block content
	script.
		$(document).ready(function(){
		var auth =!{JSON.stringify(auth)};
		console.log(auth);
		if (auth==0) {
			var edit=document.getElementById("edit_link");
			edit.parentNode.removeChild(edit);
			var del=document.getElementById("delete_link");
			del.parentNode.removeChild(del);
			}
		});
	div(class='ui main text container')
		h1(class='ui header') #{note.title}
		div(class='ui divider')
		h5(class='ui grey header') by 
			em #{note.authorname} on 
			em #{note.modified_at}	
		a(href="/note/modify/#{note._id}", id="edit_icon")
			i(class="edit icon", id="edit_link")
		a(href="/note/delete/#{note._id}", id="delete_icon")
			i(class="trash icon", id="delete_link")
		div(class='ui divider')
	div(class='ui justified text container')!= note.content
		h5(class="ui horizontal divider header")
			i(class="share alternate icon")
			| Share
		div
			<!-- Go to www.addthis.com/dashboard to customize your tools -->
			div(class="addthis_inline_share_toolbox")
		h5(class="ui horizontal divider header")
			i(class="comment outline icon")
			| Comment
		div(id="HCB_comment_box")
