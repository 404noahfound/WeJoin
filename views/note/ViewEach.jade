extends ../layout

block content
	each note in notes
		div(class='ui main text container')
			h1(class='ui header') #{note.title}
			div(class='ui divider')
			h5(class='ui grey header') by 
				em #{user.username} on 
				em #{note.modified_at}
			div(class='ui divider')
		div(class='ui text container')!= note.content
			h5(class="ui horizontal divider header")
				i(class="share alternate icon")
				| Share
